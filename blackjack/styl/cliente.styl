alinear(a,b,c)
  display flex
  flex-direction a
  justify-content b
  align-items c
 
ocultar()
  display none    

body
  border 0
  margin 0
  width 420px
  height 500px
  alinear(column,flex-start,center)
  font-family Palatino Linotype
  overflow hidden
  background-image url("../img/i.jpg")
  background-size 420px 500px

#hmesa
  ocultar()  

#login
  ocultar()  
  
#hclient
  alinear(column,flex-start,center)
  width 420px
  p
    margin 0
    margin 10px 0
    color white
    font-size 1.2em

  header
    width 100%
    height 70px
    margin 0
    color aliceblue
    margin 0
    padding 0
    alinear(column,center,center)

  section
    alinear(row,space-around,center)
    flex-wrap wrap
    width 100%
    height 300px
    overflow auto

    button
      alinear(column,space-between,center)
      position relative
      height 40%
      width 20%
      margin 5px
      background white

      &:hover
        background beige
      
      img
        width 30px
        height 30px
      div
        alinear(row,space-between,center)
        width 30px
        height 30px
        background-size 100%
        //text-align center
        width 100%
        p
          color black
          width 50%
      h3
        margin 0
        padding 0
        width 100%
        text-align center

  .button
    width 40%
    height 50px
    border-radius 30px
    color aliceblue
    font-size 1.2em
    margin-top 20px
    color #fff
    background-color #5cb85c
    &:hover
      background #9B9F9B
