.main
  width 100%
  //===========Slider===============
  .theme-live
    .nivoSlider
      position relative
      a
        border 0
        display block
      img
        height 610px !important
    //===========Pagination===============
    .nivo-control
      display block
      width 18px
      height 18px
      border-radius 50%
      background gris
      margin 3px
      text-indent -9999px
      &:hover
        background gris_oscuro
    .nivo-controlNav
      display flex
      justify-content center
    .active
      background gris_oscuro
    //===========Arrows===============
    .nivo-directionNav
