*
  margin 0
  padding 0
  box-sizing border-box
.container
  max-width 1300px
  margin auto
ul,ol
  list-style none

.container
  max-width 1180px
  margin auto
.beta
  display none !important

#disqus_thread
  iframe
    width 100% !important
header
  width 100%
  border-bottom 1px solid gris
  .menu_bar
    display none
  .cont_header
    display flex
    flex-direction row
    align-items center
    justify-content center
    flex-wrap wrap
    img
      width 100px
      height 100px
    nav
      background white
      text-align right
      z-index 1000
      width 70%
      ul
        list-style none
        li
          display  inline-block
          position relative
          a
            color gris
            display block
            text-decoration none
            padding 20px
