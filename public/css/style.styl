      .nivo-nextNav
        display inline-block
        font normal normal normal 14px/1 iconos
        font-size inherit
        text-rendering auto
        -webkit-font-smoothing antialiased
        -moz-osx-font-smoothing grayscale
        font-size 60px
        color white
        &:after
          content: "\f105";
      a
        display block
        width 35px
        height 35px
