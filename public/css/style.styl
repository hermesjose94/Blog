//=================Tarjetas 3D=======================
  .contenedor
    display flex
    flex-direction row
    flex-wrap wrap
    justify-content flex-start
    .contenedor_tarjeta
      margin 30px
      &:hover
        figure
          -webkit-transform perspective(600px) rotateY(180deg)
          -ms-transform perspective(600px) rotateY(180deg)
          -o-transform perspective(600px) rotateY(180deg)
          transform perspective(600px) rotateY(180deg)
          -webkit-box-shadow 0px 2px 10px 2px rbga(0,0,0,0.25)
          -moz-box-shadow 0px 2px 10px 2px rbga(0,0,0,0.25)
          box-shadow 0px 2px 10px 2px rbga(0,0,0,0.25)
          .frontal.box
            .titulo
              display none
      a
        display inline-block
      figure
        width 300px
        height 350px
        margin 0
        position relative
        transition all ease .5s
        transform-style preserve-3d
        transform perspective(600px) rotateY(0deg)
        img
          width 100%
          height 350px
          border-radius 5px
        .frontal.box
          position relative
          .titulo
            position absolute
            bottom 0
            padding 10px
            color white
            background rgba(19, 18, 18, 0.7)
            border-radius  0 0 5px 5px
            width 300px
            h2
              margin-bottom 10px
            .extra
              display flex
              justify-content space-between
              i
                margin-right 10px
        .frontal
        .trasera
          width 300px
          height 350px
          border-radius 5px
          transition all ease .5s
        .frontal
          display block
          top 0
          //backface-visibility hidden
        .trasera
          position absolute
          top 0
          padding 20px
          color white
          transform perspective(600px) rotateY(180deg)
          backface-visibility hidden
          overflow auto
          background rgba(19, 18, 18, 0.7)
          .titulo
            color white
            font-weight normal
            margin-bottom 20px
            font-family 'Source Sans Pro', sans-serif
            font-size 24px
          hr
            height 2px
            background white
            border none
            margin-bottom 20px
            opacity .5
          p
            font-family 'Source Sans Pro', sans-serif
            line-height 22px
            font-size 14px
